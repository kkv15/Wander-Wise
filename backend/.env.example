# OpenTripMap API Key (Required)
OPENTRIPMAP_API_KEY=your_opentripmap_api_key_here

# Nominatim Email (Optional but recommended)
NOMINATIM_EMAIL=your_email@example.com

# Groq API Key (Required for AI itinerary generation)
GROQ_API_KEY=your_groq_api_key_here

# Google Places API Key (Optional)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# OpenRouteService API Key (Optional)
OPENROUTESERVICE_API_KEY=your_openrouteservice_api_key_here

# Database Configuration
DB_BACKEND=sqlite

# SQLite Database Path
SQLITE_PATH=./data.db

# MongoDB Configuration (Only if DB_BACKEND=mongo)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB=wanderwise

# JWT Secret (Required if DB_BACKEND=mongo)
JWT_SECRET=change-me-long-random-secret-key
JWT_EXPIRE_MINUTES=60

# Default Currency
DEFAULT_CURRENCY=INR
